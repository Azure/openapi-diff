    "host": "petstore.swagger.wordnik.com",
    "basePath": "/api",
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/json",
        "application/xml",
        "application/json; charset=utf-8",
        "application/xml; charset=utf-8",
        "application/atom+xml",
        "application/octet-stream",
        "application/zip",
        "application/gzip"
    ],
    "produces": [
        "application/json",
